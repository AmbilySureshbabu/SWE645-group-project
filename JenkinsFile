node {

    stage('Checkout') {
      echo "Checkout code in progress...."
      checkout scm
    }


    stage('Build') {
        echo "Building in progress...."
        def antHome = tool 'LocalAnt'
	if(isUnix()){
	  	env.PATH = "${antHome}/bin;${env.PATH}"
		echo "${env.PATH}"
          	sh "${antHome}/bin/ant"
	}
	else
	{
        	env.PATH = "${antHome}\\bin;${env.PATH}"
        	bat "ant"
	}
    }
    
     stage('Building image') {
	     def newApp
	     def registry = 'registry.hub.docker.com'
	     def registryCredential = 'swe645group'
	     def buildHome = 'ambilysureshbabu/swe645repo'
		docker.withRegistry( 'https://' + registry, registryCredential ) {
			    def buildName = buildHome + ":$BUILD_NUMBER"
				newApp = docker.build buildName
				newApp.push()
				buildName = buildHome + ":latest"
				newApp = docker.build buildName
				newApp.push()
    	}
    }
    stage('Deploy') {
     withKubeConfig([credentialsId: 'token-jn5v8', serverUrl: 'https://ec2-3-237-11-24.compute-1.amazonaws.com/k8s/clusters/c-hm8sj']) {
      sh 'kubectl apply -f swe645-1.yaml'
    }
    }
}
